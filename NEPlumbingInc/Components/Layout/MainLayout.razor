@inherits LayoutComponentBase
@inject AuthenticationStateProvider AuthStateProvider
@inject CustomAuthenticationStateProvider CustomAuthStateProvider

<PageTitle>N.E. Plumbing Inc.</PageTitle>

<style>
    .navbar-brand {
        font-size: 1.5rem;
        font-weight: bold;
    }

    .nav-link {
        font-size: 1rem;
    }ß
</style>

<header class="navbar navbar-expand-lg navbar-dark bg-dark px-4">
    <div class="container-fluid d-flex justify-content-between align-items-center w-100">
        <!-- Company Name (Left) -->
        <a class="navbar-brand me-4" href="">N.E. Plumbing Inc.</a>

        <!-- Center Nav Links -->
        <div class="d-flex flex-grow-1 justify-content-center">
            <NavLink class="nav-link text-white me-3" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
            <NavLink class="nav-link text-white me-3" href="services">
                <span class="oi oi-plus" aria-hidden="true"></span> Services
            </NavLink>
        </div>

        <!-- Right Side Login/Logout -->
        <div>
            <AuthorizeView>
                <Authorized>
                    <NavLink class="nav-link text-white" href="admin-logout">
                        <span class="oi oi-account-logout" aria-hidden="true"></span> Logout
                    </NavLink>
                </Authorized>
                <NotAuthorized>
                    <NavLink class="nav-link text-white" href="admin-login">
                        <span class="oi oi-account-login" aria-hidden="true"></span> Admin Login
                    </NavLink>
                </NotAuthorized>
            </AuthorizeView>
        </div>
    </div>
</header>

<main class="container my-4">
    @Body
</main