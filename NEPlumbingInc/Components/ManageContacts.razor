@inject IContactManager ContactManager
@inject IJSRuntime JSRuntime
@rendermode InteractiveServer

<div class="card shadow-sm">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Contact Messages</h5>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Special Offer</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var contact in contacts)
                    {
                        <tr class="@(!contact.IsRead ? "table-info" : "")">
                            <td>@contact.CreatedAt.ToLocalTime().ToString("g")</td>
                            <td>@contact.Name</td>
                            <td>@contact.Email</td>
                            <td>@contact.Phone</td>
                            <td>
                                @if (contact.IsSpecialOffer)
                                {
                                    <span class="badge bg-success">Yes</span>
                                }
                            </td>
                            <td>
                                @if (!contact.IsRead)
                                {
                                    <span class="badge bg-info">New</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Read</span>
                                }
                            </td>
                            <td>
                                <button class="btn btn-sm btn-outline-primary me-1" 
                                        @onclick="() => ViewMessage(contact)">
                                    <i class="fas fa-eye"></i>
                                </button>
                                <button class="btn btn-sm btn-outline-danger" 
                                        @onclick="() => DeleteContact(contact.Id)">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@if (showModal)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Message Details</h5>
                    <button type="button" class="btn-close" @onclick="CloseModal"></button>
                </div>
                <div class="modal-body">
                    <p><strong>From:</strong> @selectedContact.Name</p>
                    <p><strong>Email:</strong> @selectedContact.Email</p>
                    @if (!string.IsNullOrEmpty(selectedContact.Phone))
                    {
                        <p><strong>Phone:</strong> @selectedContact.Phone</p>
                    }
                    <p><strong>Date:</strong> @selectedContact.CreatedAt.ToLocalTime().ToString("g")</p>
                    <hr />
                    <p>@selectedContact.Message</p>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<ContactViewModel> contacts = new();
    private ContactViewModel selectedContact = new();
    private bool showModal;

    protected override async Task OnInitializedAsync() => 
        await LoadContacts();

    private async Task LoadContacts() => 
        contacts = await ContactManager.GetAllContactsAsync();

    private async Task ViewMessage(ContactViewModel contact)
    {
        selectedContact = contact;
        showModal = true;
        
        if (!contact.IsRead)
        {
            await ContactManager.MarkAsReadAsync(contact.Id);
            await LoadContacts();
        }
    }

    private void CloseModal()
    {
        showModal = false;
        selectedContact = new ContactViewModel();
    }

    private async Task DeleteContact(int id)
    {
        var confirmed = await JSRuntime.InvokeAsync<bool>("confirm", 
            "Are you sure you want to delete this message?");
        
        if (confirmed)
        {
            await ContactManager.DeleteContactAsync(id);
            await LoadContacts();
        }
    }
}