@using NEPlumbingInc.Models
@using NEPlumbingInc.Services
@rendermode InteractiveServer

<style>
    .manage-content-card .mb-3 {
        margin-bottom: 0.75rem !important;
    }
    .manage-content-card .form-label {
        font-size: 0.85rem;
        margin-bottom: 0.25rem;
    }
    .manage-content-card .form-control {
        font-size: 0.85rem;
        padding: 0.4rem 0.6rem;
    }
    .manage-content-card textarea.form-control {
        resize: vertical;
    }
    .accordion-button {
        padding: 0.75rem 1rem;
        font-size: 0.95rem;
    }
    .accordion-body {
        padding: 0.75rem 1rem;
    }
</style>

<div class="card manage-content-card">
    <div class="card-header">
        <h6 class="mb-0">Manage Home Page Content</h6>
    </div>
    <div class="card-body p-2">
        @if (content != null)
        {
            <form @onsubmit="SaveContent" @onsubmit:preventDefault="true">
                <div class="accordion accordion-flush" id="contentAccordion">
                    <!-- Hero Section -->
                    <div class="accordion-item">
                        <h2 class="accordion-header">
                            <button class="accordion-button @(expandedSections["hero"] ? "" : "collapsed")" type="button" @onclick="@(() => ToggleSection("hero"))">
                                Hero Section
                            </button>
                        </h2>
                        <div class="accordion-collapse @(expandedSections["hero"] ? "show" : "collapse")">
                            <div class="accordion-body p-2">
                                <div class="mb-3">
                                    <label for="heroBadge" class="form-label">Badge Text</label>
                                    <input type="text" class="form-control" id="heroBadge" @bind="content.HeroBadgeText" />
                                </div>
                                <div class="mb-3">
                                    <label for="heroTitle" class="form-label">Title</label>
                                    <input type="text" class="form-control" id="heroTitle" @bind="content.HeroTitle" />
                                </div>
                                <div class="mb-3">
                                    <label for="heroDescription" class="form-label">Description</label>
                                    <textarea class="form-control" id="heroDescription" rows="2" @bind="content.HeroDescription"></textarea>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Feature Badges -->
                    <div class="accordion-item">
                        <h2 class="accordion-header">
                            <button class="accordion-button @(expandedSections["features"] ? "" : "collapsed")" type="button" @onclick="@(() => ToggleSection("features"))">
                                Feature Badges
                            </button>
                        </h2>
                        <div class="accordion-collapse @(expandedSections["features"] ? "show" : "collapse")">
                            <div class="accordion-body p-2">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label for="feature1" class="form-label">Badge 1</label>
                                            <input type="text" class="form-control" id="feature1" @bind="content.FeatureBadge1" />
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label for="feature2" class="form-label">Badge 2</label>
                                            <input type="text" class="form-control" id="feature2" @bind="content.FeatureBadge2" />
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label for="feature3" class="form-label">Badge 3</label>
                                            <input type="text" class="form-control" id="feature3" @bind="content.FeatureBadge3" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Premium Services -->
                    <div class="accordion-item">
                        <h2 class="accordion-header">
                            <button class="accordion-button @(expandedSections["services"] ? "" : "collapsed")" type="button" @onclick="@(() => ToggleSection("services"))">
                                Premium Services
                            </button>
                        </h2>
                        <div class="accordion-collapse @(expandedSections["services"] ? "show" : "collapse")">
                            <div class="accordion-body p-2">
                                <div class="mb-3">
                                    <label for="servicesTitle" class="form-label">Section Title</label>
                                    <input type="text" class="form-control" id="servicesTitle" @bind="content.PremiumServicesTitle" />
                                </div>
                                
                                <small class="text-muted d-block mb-2"><strong>Service 1</strong></small>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-2">
                                            <label for="service1Title" class="form-label">Title</label>
                                            <input type="text" class="form-control" id="service1Title" @bind="content.Service1Title" />
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-2">
                                            <label for="service1Desc" class="form-label">Description</label>
                                            <textarea class="form-control" id="service1Desc" rows="1" @bind="content.Service1Description"></textarea>
                                        </div>
                                    </div>
                                </div>

                                <small class="text-muted d-block mb-2 mt-2"><strong>Service 2</strong></small>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-2">
                                            <label for="service2Title" class="form-label">Title</label>
                                            <input type="text" class="form-control" id="service2Title" @bind="content.Service2Title" />
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-2">
                                            <label for="service2Desc" class="form-label">Description</label>
                                            <textarea class="form-control" id="service2Desc" rows="1" @bind="content.Service2Description"></textarea>
                                        </div>
                                    </div>
                                </div>

                                <small class="text-muted d-block mb-2 mt-2"><strong>Service 3</strong></small>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label for="service3Title" class="form-label">Title</label>
                                            <input type="text" class="form-control" id="service3Title" @bind="content.Service3Title" />
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label for="service3Desc" class="form-label">Description</label>
                                            <textarea class="form-control" id="service3Desc" rows="1" @bind="content.Service3Description"></textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="mt-3">
                    @if (!string.IsNullOrEmpty(message))
                    {
                        <div class="alert alert-success alert-sm mb-2 py-1 px-2" role="alert">
                            <small>@message</small>
                        </div>
                    }
                    <button type="submit" class="btn btn-success btn-sm">Save Changes</button>
                </div>
            </form>
        }
        else
        {
            <p>Loading...</p>
        }
    </div>
</div>

@code {
    private HomePageContent? content;
    private string message = "";
    private CancellationTokenSource? clearMessageCts;
    private Dictionary<string, bool> expandedSections = new()
    {
        { "hero", true },
        { "features", false },
        { "services", false }
    };

    [Inject]
    private HomePageContentService? HomePageContentService { get; set; }

    protected override async Task OnInitializedAsync()
    {
        content = await HomePageContentService!.GetContentAsync();
    }

    private async Task SaveContent()
    {
        await HomePageContentService!.UpdateContentAsync(content!);
        message = "Home page content updated successfully!";

        ScheduleClearMessage(TimeSpan.FromSeconds(3));
    }

    private void ScheduleClearMessage(TimeSpan delay)
    {
        clearMessageCts?.Cancel();
        clearMessageCts?.Dispose();
        clearMessageCts = new CancellationTokenSource();

        var token = clearMessageCts.Token;
        _ = ClearMessageAfterDelayAsync(delay, token);
    }

    private async Task ClearMessageAfterDelayAsync(TimeSpan delay, CancellationToken cancellationToken)
    {
        try
        {
            await Task.Delay(delay, cancellationToken);
        }
        catch (TaskCanceledException)
        {
            return;
        }

        message = "";
        await InvokeAsync(StateHasChanged);
    }

    private void ToggleSection(string sectionName)
    {
        expandedSections[sectionName] = !expandedSections[sectionName];
    }
}
