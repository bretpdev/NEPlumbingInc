@inject IMessageService MessageService
@inject IJSRuntime JSRuntime
@rendermode InteractiveServer

<style>
    /* Bootstrap tables default to dark text; override in dark mode using the app palette */
    [data-dark-mode="true"] .manage-messages .table {
        color: var(--text-color);

        --bs-table-bg: var(--surface-color);
        --bs-table-striped-bg: var(--surface-alt-color);
        --bs-table-striped-color: var(--text-color);
        --bs-table-active-bg: var(--surface-alt-color);
        --bs-table-active-color: var(--text-color);
        --bs-table-hover-bg: var(--surface-alt-color);
        --bs-table-hover-color: var(--text-color);
        --bs-table-border-color: var(--bs-border-color);
    }

    [data-dark-mode="true"] .manage-messages .table thead th {
        color: var(--text-color);
    }

    [data-dark-mode="true"] .manage-messages .table td,
    [data-dark-mode="true"] .manage-messages .table th {
        border-color: var(--bs-border-color);
    }

    /* Keep unread highlight readable in dark mode */
    [data-dark-mode="true"] .manage-messages .table-info {
        color: var(--text-color);
        --bs-table-bg: var(--surface-alt-color);
        --bs-table-striped-bg: var(--surface-alt-color);
        --bs-table-active-bg: var(--surface-alt-color);
        --bs-table-hover-bg: var(--surface-alt-color);
    }
</style>

<div class="card shadow-sm manage-messages">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Messages</h5>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Tags</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var message in messages)
                    {
                        <tr class="@(!message.IsRead ? "table-info" : "")">
                            <td>@message.CreatedAt.ToLocalTime().ToString("g")</td>
                            <td>@message.Name</td>
                            <td>@message.Email</td>
                            <td>@message.Phone</td>
                            <td>
                                @if (IsJobApplication(message))
                                {
                                    <span class="badge bg-warning text-dark me-1">Job</span>
                                }
                                @if (!string.IsNullOrWhiteSpace(message.ResumeBlobName))
                                {
                                    <span class="badge bg-secondary me-1">Resume</span>
                                }
                                @if (message.IsSpecialOffer)
                                {
                                    <span class="badge bg-success">Special Offer</span>
                                }
                            </td>
                            <td>
                                @if (!message.IsRead)
                                {
                                    <span class="badge bg-info">New</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Read</span>
                                }
                            </td>
                            <td>
                                <button class="btn btn-sm btn-outline-primary me-1" 
                                        @onclick="() => ViewMessage(message)">
                                    <i class="fas fa-eye"></i>
                                </button>
                                <button class="btn btn-sm btn-outline-danger" 
                                        @onclick="() => DeleteMessage(message.Id)">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@if (showModal)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Message Details</h5>
                    <button type="button" class="btn-close" @onclick="CloseModal"></button>
                </div>
                <div class="modal-body">
                    <p><strong>From:</strong> @selectedMessage.Name</p>
                    <p><strong>Email:</strong> @selectedMessage.Email</p>
                    @if (!string.IsNullOrEmpty(selectedMessage.Phone))
                    {
                        <p><strong>Phone:</strong> @selectedMessage.Phone</p>
                    }
                    @if (!string.IsNullOrWhiteSpace(selectedMessage.ResumeBlobName))
                    {
                        <p>
                            <strong>Resume:</strong>
                            <a class="btn btn-sm btn-outline-secondary ms-2" href="/admin/messages/@selectedMessage.Id/resume" target="_blank" rel="noopener noreferrer">
                                <i class="fas fa-file-arrow-down me-1"></i>
                                Download
                            </a>
                        </p>
                    }
                    <p><strong>Date:</strong> @selectedMessage.CreatedAt.ToLocalTime().ToString("g")</p>
                    <hr />
                    @if (IsJobApplication(selectedMessage))
                    {
                        var items = BuildJobApplicationBulletItems(selectedMessage.Message);
                        <ul class="mb-0">
                            @foreach (var item in items)
                            {
                                <li style="white-space: pre-wrap;">@item</li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="mb-0" style="white-space: pre-wrap;">@selectedMessage.Message</p>
                    }
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<MessageViewModel> messages = new();
    private MessageViewModel selectedMessage = new();
    private bool showModal;

    private static bool IsJobApplication(MessageViewModel message)
        => !string.IsNullOrWhiteSpace(message.Message)
           && message.Message.TrimStart().StartsWith("Job Application", StringComparison.OrdinalIgnoreCase);

    private static IReadOnlyList<string> BuildJobApplicationBulletItems(string? message)
    {
        if (string.IsNullOrWhiteSpace(message)) return Array.Empty<string>();

        var normalized = message.Replace("\r\n", "\n").Replace("\r", "\n");
        var lines = normalized.Split('\n');

        var items = new List<string>();
        var additionalDetailsLines = new List<string>();
        var inAdditionalDetails = false;

        foreach (var rawLine in lines)
        {
            var line = rawLine.Trim();
            if (string.IsNullOrWhiteSpace(line)) continue;

            if (line.Equals("Job Application", StringComparison.OrdinalIgnoreCase))
                continue;

            if (line.Equals("Additional details:", StringComparison.OrdinalIgnoreCase))
            {
                inAdditionalDetails = true;
                continue;
            }

            if (inAdditionalDetails)
                additionalDetailsLines.Add(line);
            else
                items.Add(line);
        }

        if (additionalDetailsLines.Count > 0)
        {
            var details = string.Join("\n", additionalDetailsLines);
            items.Add($"Additional details: {details}");
        }

        return items;
    }

    protected override async Task OnInitializedAsync() => 
        await LoadMessages();

    private async Task LoadMessages() => 
        messages = await MessageService.GetAllMessagesAsync();

    private async Task ViewMessage(MessageViewModel message)
    {
        selectedMessage = message;
        showModal = true;
        
        if (!message.IsRead)
        {
            await MessageService.MarkAsReadAsync(message.Id);
            await LoadMessages();
        }
    }

    private void CloseModal()
    {
        showModal = false;
        selectedMessage = new MessageViewModel();
    }

    private async Task DeleteMessage(int id)
    {
        var confirmed = await JSRuntime.InvokeAsync<bool>("confirm", 
            "Are you sure you want to delete this message?");
        
        if (confirmed)
        {
            await MessageService.DeleteMessageAsync(id);
            await LoadMessages();
        }
    }
}