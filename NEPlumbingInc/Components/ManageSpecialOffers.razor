    [data-dark-mode="true"] .card-body {
        background-color: #252526;
        color: #d4d4d4;
    }

    [data-dark-mode="true"] .form-label {
        color: #d4d4d4;
    }

    [data-dark-mode="true"] .form-check-label {
        color: #d4d4d4;
    }

    [data-dark-mode="true"] .form-control,
    [data-dark-mode="true"] textarea.form-control {
