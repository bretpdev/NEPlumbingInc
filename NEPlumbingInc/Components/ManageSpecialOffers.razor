@inject ISpecialOfferSettingsService SpecialOfferSettingsService
@inject ISpecialOfferService SpecialOfferService
@rendermode InteractiveServer

<style>
    .settings-card {
        border: 1px solid #dee2e6;
        border-radius: 0.5rem;
        padding: 1.5rem;
        margin-bottom: 1.5rem;
        background-color: #f8f9fa;
    }

    [data-dark-mode="true"] .settings-card {
        background-color: #252526;
        border-color: #3e3e42;
        color: #d4d4d4;
    }

    .text-input-full {
        width: 100%;
    }

    .offer-count-badge {
        display: inline-block;
        padding: 0.5rem 1rem;
        background-color: #0066CC;
        color: white;
        border-radius: 0.375rem;
        font-weight: 500;
    }

    .offer-count-badge.warning {
        background-color: #fd7e14;
    }

    .offer-count-badge.danger {
        background-color: #dc3545;
    }

    /* Dark mode styling */
