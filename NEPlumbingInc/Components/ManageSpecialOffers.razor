    }

    [data-dark-mode="true"] .badge {
        color: #d4d4d4;
    }

    [data-dark-mode="true"] .badge.bg-success {
        background-color: #2d7a3a !important;
    }

    [data-dark-mode="true"] .badge.bg-danger {
        background-color: #7a3a2a !important;
    }

    [data-dark-mode="true"] h5,
    [data-dark-mode="true"] h6 {
        color: #d4d4d4;
    }

    [data-dark-mode="true"] .btn-light {
        background-color: #3c3c3c;
        border-color: #3e3e42;
