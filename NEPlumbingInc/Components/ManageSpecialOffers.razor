@inject ISpecialOfferSettingsService SpecialOfferSettingsService
@inject ISpecialOfferService SpecialOfferService
@rendermode InteractiveServer

<style>
    /* Keep these styles scoped to this component so they don't affect the whole admin dashboard. */
    .manage-special-offers .settings-card {
        border: 1px solid var(--bs-border-color);
        border-radius: 0.5rem;
        padding: 1.5rem;
        margin-bottom: 1.5rem;
        background-color: var(--surface-alt-color);
        color: var(--text-color);
    }

    .manage-special-offers .text-input-full {
        width: 100%;
    }

    .manage-special-offers .offer-count-badge {
        display: inline-block;
        padding: 0.5rem 1rem;
        background-color: var(--primary-color);
        color: var(--header-footer-text-color);
        border-radius: 0.375rem;
        font-weight: 500;
    }

    .manage-special-offers .offer-count-badge.warning {
        background-color: var(--accent-color);
    }

    .manage-special-offers .offer-count-badge.danger {
        background-color: var(--secondary-color);
    }
</style>

<div class="card shadow-sm manage-special-offers">
    <div class="card-header">
        <h5 class="mb-0"><i class="fas fa-gift me-2"></i>Manage Special Offers</h5>
    </div>
    <div class="card-body">
        @if (settings != null)
        {
            <form @onsubmit="SaveSettings" @onsubmit:preventDefault="true">
                <!-- Enable/Disable Toggle -->
                <div class="settings-card">
                    <h6 class="mb-3">Offer Status</h6>
                    <div class="form-check form-switch mb-3">
                        <input class="form-check-input" type="checkbox" id="offerToggle" 
                               @bind="settings.IsEnabled" />
                        <label class="form-check-label" for="offerToggle">
                            @if (settings.IsEnabled)
                            {
                                <span class="badge bg-success">Enabled</span>
                                <span class="ms-2">Special offers are currently active</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Disabled</span>
                                <span class="ms-2">Special offers are currently disabled</span>
                            }
                        </label>
                    </div>

                    <!-- Offer Limit Settings -->
                    <div class="mb-3">
                        <label for="maxOffersLimit" class="form-label">Maximum Offers Allowed</label>
                        <div class="input-group">
                            <input type="number" class="form-control" id="maxOffersLimit"
                                   @bind="settings.MaxOffersLimit" min="1" />
                            <span class="input-group-text">offers</span>
                        </div>
                        <small class="text-muted d-block mt-2">
                            Current count: <strong>@offersGiven</strong> / <strong>@settings.MaxOffersLimit</strong>
                        </small>
                        @if (offersGiven >= settings.MaxOffersLimit)
                        {
                            <div class="alert alert-warning mt-2 mb-0">
                                <i class="fas fa-exclamation-triangle me-2"></i>
                                Offer limit has been reached. Reset the count to allow more offers.
                            </div>
                        }
                        else if (offersGiven >= settings.MaxOffersLimit * 0.8)
                        {
                            <div class="alert alert-info mt-2 mb-0">
                                <i class="fas fa-info-circle me-2"></i>
                                Nearing limit: @(settings.MaxOffersLimit - offersGiven) offers remaining.
                            </div>
                        }
                    </div>
                </div>

                <!-- Overlay Text Settings -->
                <div class="settings-card">
                    <h6 class="mb-3"><i class="fas fa-eye me-2"></i>Active Offer Text</h6>
                    <p class="text-muted small">Customize the text shown when a customer clicks on the hidden overlay and an offer is available:</p>

                    <div class="mb-3">
                        <label for="headingText" class="form-label">Heading</label>
                        <input type="text" class="form-control" id="headingText"
                               @bind="settings.HeadingText" placeholder="Welcome to the NE Underground" />
                    </div>

                    <div class="mb-3">
                        <label for="descriptionText" class="form-label">Description</label>
                        <textarea class="form-control" id="descriptionText" rows="2"
                                  @bind="settings.DescriptionText" placeholder="Unlock this season's exclusive homeowner offer."></textarea>
                    </div>

                    <div class="mb-3">
                        <label for="buttonText" class="form-label">Button Text</label>
                        <input type="text" class="form-control" id="buttonText"
                               @bind="settings.ButtonText" placeholder="Reveal the Offer" />
                    </div>

                    <!-- Preview -->
                    <div class="alert alert-info">
                        <strong>Preview:</strong>
                        <div class="mt-2">
                            <h5>@settings.HeadingText</h5>
                            <p>@settings.DescriptionText</p>
                            <button class="btn btn-light btn-sm" disabled>@settings.ButtonText</button>
                        </div>
                    </div>
                </div>

                <!-- Offer Content (Public Claim Page) -->
                <div class="settings-card">
                    <h6 class="mb-3"><i class="fas fa-gift me-2"></i>Offer Content</h6>
                    <p class="text-muted small">This content is shown on the public offer claim page after the customer clicks "@settings.ButtonText".</p>

                    <div class="form-check form-switch mb-3">
                        <input class="form-check-input" type="checkbox" id="requireAddress"
                               @bind="settings.RequireAddress" />
                        <label class="form-check-label" for="requireAddress">
                            Require address to claim offer
                        </label>
                        <small class="text-muted d-block">Turn this on when you want to mail something out.</small>
                    </div>

                    <div class="mb-3">
                        <label for="offerTitle" class="form-label">Offer Title</label>
                        <input type="text" class="form-control" id="offerTitle"
                               @bind="settings.OfferTitle" placeholder="Exclusive Homeowner Offer" />
                    </div>

                    <div class="mb-3">
                        <label for="offerBody" class="form-label">Offer Details</label>
                        <textarea class="form-control" id="offerBody" rows="4"
                                  @bind="settings.OfferBody" placeholder="Describe what's included in the offer."></textarea>
                    </div>

                    <div class="mb-3">
                        <label for="offerFinePrint" class="form-label">Fine Print (optional)</label>
                        <textarea class="form-control" id="offerFinePrint" rows="2"
                                  @bind="settings.OfferFinePrint" placeholder="Any terms/conditions, expiration, etc."></textarea>
                    </div>

                    <div class="alert alert-info">
                        <strong>Preview:</strong>
                        <div class="mt-2">
                            <h5>@settings.OfferTitle</h5>
                            <p style="white-space: pre-wrap;">@settings.OfferBody</p>
                            @if (!string.IsNullOrWhiteSpace(settings.OfferFinePrint))
                            {
                                <p class="small text-muted mb-0" style="white-space: pre-wrap;">@settings.OfferFinePrint</p>
                            }
                        </div>
                    </div>
                </div>

                <!-- No Offer Available Text -->
                <div class="settings-card">
                    <h6 class="mb-3"><i class="fas fa-lock me-2"></i>No Offer Text</h6>
                    <p class="text-muted small">Customize the text shown when no offers are available:</p>

                    <div class="mb-3">
                        <label for="noOfferHeading" class="form-label">Heading</label>
                        <input type="text" class="form-control" id="noOfferHeading"
                               @bind="settings.NoOfferHeading" placeholder="Sorry, you missed it!" />
                    </div>

                    <div class="mb-3">
                        <label for="noOfferDescription" class="form-label">Description</label>
                        <textarea class="form-control" id="noOfferDescription" rows="2"
                                  @bind="settings.NoOfferDescription" placeholder="Our exclusive offer has reached its limit."></textarea>
                    </div>

                    <div class="mb-3">
                        <label for="newsletterText" class="form-label">Newsletter Text</label>
                        <textarea class="form-control" id="newsletterText" rows="2"
                                  @bind="settings.NewsletterText" placeholder="Sign up for our newsletter to be notified of future offers."></textarea>
                    </div>

                    <!-- Preview -->
                    <div class="alert alert-warning">
                        <strong>Preview:</strong>
                        <div class="mt-2">
                            <h5>@settings.NoOfferHeading</h5>
                            <p>@settings.NoOfferDescription</p>
                            <p>@settings.NewsletterText</p>
                        </div>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="mt-4">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="fas fa-save me-2"></i>Save Settings
                    </button>
                    <button type="button" class="btn btn-secondary me-2" @onclick="ResetSettings">
                        <i class="fas fa-undo me-2"></i>Reset to Defaults
                    </button>
                    <button type="button" class="btn btn-outline-secondary me-2" @onclick="StartNewOffer">
                        <i class="fas fa-sync me-2"></i>Start New Offer
                    </button>
                    <button type="button" class="btn btn-danger" @onclick="ResetOfferCount">
                        <i class="fas fa-sync me-2"></i>Reset Offer Claims
                    </button>
                </div>

                @if (!string.IsNullOrEmpty(message))
                {
                    <div class="alert @(isError ? "alert-danger" : "alert-success") mt-3" role="alert">
                        @message
                    </div>
                }
            </form>
        }
        else
        {
            <p class="text-muted">Loading special offer settings...</p>
        }
    </div>
</div>

@code {
    private SpecialOfferSettings? settings;
    private string message = "";
    private bool isError = false;
    private int offersGiven = 0;

    private CancellationTokenSource? clearMessageCts;

    protected override async Task OnInitializedAsync()
    {
        settings = await SpecialOfferSettingsService.GetSettingsAsync();
        await LoadOfferCount();
    }

    private async Task LoadOfferCount()
    {
        offersGiven = await SpecialOfferService.GetOfferCountAsync();
    }

    private async Task SaveSettings()
    {
        if (settings != null)
        {
            try
            {
                await SpecialOfferSettingsService.UpdateSettingsAsync(settings);
                message = "Settings saved successfully!";
                isError = false;
                ScheduleClearMessage(TimeSpan.FromSeconds(5));
            }
            catch (Exception ex)
            {
                message = $"Error saving settings: {ex.Message}";
                isError = true;
            }
        }
    }

    private async Task ResetSettings()
    {
        if (settings != null && await ConfirmAction("Are you sure you want to reset all texts to defaults?"))
        {
            try
            {
                await SpecialOfferSettingsService.ResetToDefaultAsync();
                settings = await SpecialOfferSettingsService.GetSettingsAsync();
                message = "Settings reset to defaults!";
                isError = false;
                ScheduleClearMessage(TimeSpan.FromSeconds(5));
            }
            catch (Exception ex)
            {
                message = $"Error resetting settings: {ex.Message}";
                isError = true;
            }
        }
    }

    private async Task ResetOfferCount()
    {
        if (await ConfirmAction("Are you sure you want to reset offer claims? This clears all recorded offer clicks/claims, so customers may claim the offer again."))
        {
            try
            {
                await SpecialOfferService.ResetOfferCountAsync();
                message = "Offer claims have been reset!";
                isError = false;
                offersGiven = 0;
                ScheduleClearMessage(TimeSpan.FromSeconds(5));
            }
            catch (Exception ex)
            {
                message = $"Error resetting count: {ex.Message}";
                isError = true;
            }
        }
    }

    private async Task StartNewOffer()
    {
        if (await ConfirmAction("Start a new offer? This makes everyone eligible again for the new offer campaign."))
        {
            try
            {
                await SpecialOfferService.StartNewCampaignAsync();
                await LoadOfferCount();
                message = "New offer campaign started!";
                isError = false;
                ScheduleClearMessage(TimeSpan.FromSeconds(5));
            }
            catch (Exception ex)
            {
                message = $"Error starting new offer: {ex.Message}";
                isError = true;
            }
        }
    }

    private void ScheduleClearMessage(TimeSpan delay)
    {
        clearMessageCts?.Cancel();
        clearMessageCts?.Dispose();
        clearMessageCts = new CancellationTokenSource();

        var token = clearMessageCts.Token;
        _ = ClearMessageAfterDelayAsync(delay, token);
    }

    private async Task ClearMessageAfterDelayAsync(TimeSpan delay, CancellationToken cancellationToken)
    {
        try
        {
            await Task.Delay(delay, cancellationToken);
        }
        catch (TaskCanceledException)
        {
            return;
        }

        message = "";
        await InvokeAsync(StateHasChanged);
    }

    private async Task<bool> ConfirmAction(string confirmMessage)
    {
        // This would require JS interop for a real confirm dialog
        return await JSRuntime.InvokeAsync<bool>("confirm", confirmMessage);
    }

    [Inject]
    private IJSRuntime JSRuntime { get; set; } = null!;
}
