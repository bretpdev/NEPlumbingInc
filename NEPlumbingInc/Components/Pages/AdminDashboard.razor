@attribute [Authorize(Roles = "Admin")]
@page "/admin-dashboard"
@inject AppDbContext Db

<h3>Admin Dashboard</h3>

<div class="container">
    <div class="row">
        <div class="col">
            <h4>Welcome</h4>
            <p class="text-muted">Here you can manage submissions and site content.</p>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col">
            <h5>NE Underground Submissions</h5>

            @if (submissions is null)
            {
                <p>Loading submissions...</p>
            }
            else if (!submissions.Any())
            {
                <p>No submissions yet.</p>
            }
            else
            {
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Notes</th>
                            <th>Date Submitted</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var sub in submissions)
                        {
                            <tr>
                                <td>@sub.FullName</td>
                                <td>@sub.Email</td>
                                <td>@sub.Phone</td>
                                <td>@sub.ZipCode</td>
                                <td>@sub.Notes</td>
                                <td>@sub.SubmittedAt.ToLocalTime().ToString("g")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>

@code {
    private List<UndergroundSubmission>? submissions;

    protected override async Task OnInitializedAsync()
    {
        submissions = await Db.UndergroundSubmissions
            .OrderByDescending(s => s.SubmittedAt)
            .ToListAsync();
    }
}
