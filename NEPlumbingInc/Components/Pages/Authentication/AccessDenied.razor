@page "/access-denied"
@inject NavigationManager NavigationManager

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-danger shadow-sm">
                <div class="card-header bg-danger text-white">
                    <h4 class="card-title mb-0">
                        <i class="oi oi-shield me-2"></i>Access Denied
                    </h4>
                </div>
                <div class="card-body text-center">
                    <i class="oi oi-warning display-4 text-danger mb-4 d-block"></i>
                    <h5 class="mb-3">Insufficient Permissions</h5>
                    <p class="text-muted mb-4">You do not have the required permissions to access this resource.</p>
                    
                    <div class="d-grid gap-2">
                        <button class="btn btn-outline-secondary" @onclick="GoBack">
                            <i class="oi oi-arrow-left me-2"></i>Go Back
                        </button>
                        <a href="" class="btn btn-outline-primary">
                            <i class="oi oi-home me-2"></i>Return Home
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private void GoBack()
    {
        NavigationManager.NavigateTo(NavigationManager.Uri);
    }
}