<PageTitle>NE Plumbing Inc - Luxury Plumbing Solutions</PageTitle>

<style>
    body {
        font-family: 'Segoe UI', sans-serif;
    }

    .hero-section {
        padding: 4rem 0;
    }

    .hero-badge {
        background-color: #0056b3;
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 2rem;
        font-size: 0.9rem;
    }

    .hero-title {
        font-size: 2.75rem;
        font-weight: bold;
    }

    .hero-image {
        max-height: 600px;
        width: 100%;
        object-fit: cover;
        border-radius: 1rem;
        border: none;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2), 0 0 0 1px rgba(0, 0, 0, 0.05);
        transition: transform 0.5s ease, box-shadow 0.5s ease;
        cursor: pointer;
    }

    .hero-image:hover {
        transform: scale(1.05);
        /* Slight zoom for effect */
    }

    .hidden-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0, 0, 0, 0.7);
        display: flex;
        justify-content: center;
        align-items: center;
        opacity: 0;
        pointer-events: none;
        transition: opacity 0.3s ease, pointer-events 0s 0.3s;
    }

    .overlay-content {
        text-align: center;
        color: #fff;
        padding: 6rem;
        background-color: rgba(0, 0, 0, 0.8);
        border-radius: 1rem;
        box-shadow: 0 0 1rem rgba(0, 0, 0, 0.4);
    }

    .hidden-overlay.active {
        opacity: 1;
        pointer-events: all;
    }

    .hidden-overlay.active .overlay-content {
        transform: scale(1);
    }

    .close-button {
        position: absolute;
        top: 1rem;
        right: 1rem;
        background: transparent;
        border: none;
        color: white;
        font-size: 2rem;
        cursor: pointer;
        line-height: 1;
        padding: 0;
        z-index: 10;
    }

    .close-button:hover {
        color: #ccc;
    }

    .feature-badge {
        display: inline-flex;
        align-items: center;
        background: rgba(0, 0, 0, 0.05);
        padding: 0.5rem 1rem;
        border-radius: 2rem;
        margin: 0.5rem;
        color: #333;
        font-weight: 500;
    }

    .feature-badge i {
        margin-right: 0.5rem;
    }

    .featured-services .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border: none;
        background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
        padding: 0;
        overflow: hidden;
    }

    .featured-services .card:hover {
        transform: translateY(-8px);
        box-shadow: 0 15px 40px rgba(0, 0, 0, 0.15);
    }

    .featured-services .card-body {
        padding: 2rem;
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        min-height: 250px;
        justify-content: center;
    }

    .featured-services .card-body i {
        color: #0056b3;
        margin-bottom: 1rem;
        transition: transform 0.3s ease;
    }

    .featured-services .card:hover .card-body i {
        transform: scale(1.15);
    }

    .featured-services .card-body h3 {
        color: #333;
        font-weight: 600;
        margin-bottom: 1rem;
    }

    .featured-services .card-body p {
        color: #666;
        font-size: 0.95rem;
        line-height: 1.6;
    }

    .featured-services {
        background-color: #f8f9fa;
        border-top: 3px solid #0056b3;
        border-bottom: 3px solid #0056b3;
    }

    .testimonials {
        background-color: #f8f9fa;
    }

    .col-lg-6.text-center {
        padding: 2rem;
    }
</style>

<div class="container hero-section">
    <div class="row align-items-center">
        <div class="col-lg-6 mb-4 mb-lg-0">
            @if (pageContent != null)
            {
                <span class="hero-badge">@pageContent.HeroBadgeText</span>
                <h1 class="hero-title mt-3">@pageContent.HeroTitle</h1>
                <p class="lead text-muted mt-3">
                    @pageContent.HeroDescription
                </p>

                <div class="d-flex flex-wrap mt-3">
                    <span class="feature-badge">
                        <i class="bi bi-shield-check"></i> @pageContent.FeatureBadge1
                    </span>
                    <span class="feature-badge">
                        <i class="bi bi-trophy"></i> @pageContent.FeatureBadge2
                    </span>
                    <span class="feature-badge">
                        <i class="bi bi-clock"></i> @pageContent.FeatureBadge3
                    </span>
                </div>
            }
            else
            {
                <p>Loading content...</p>
            }

            <div class="d-flex gap-3 mt-4">
                <a href="/messages" class="btn btn-primary btn-lg">
                    <i class="bi bi-calendar-check me-2"></i>Schedule Consultation
                </a>
                <a href="/services" class="btn btn-outline-secondary btn-lg">
                    <i class="bi bi-grid me-2"></i>View Services
                </a>
            </div>
        </div>
        <div class="col-lg-6 text-center">
            <img src="images/NEPlumbingInc7.PNG" alt="Luxury Plumbing Work" class="hero-image"
                @onclick="RevealSpeakeasy" />
        </div>

        <!-- Hidden overlay that appears above everything -->
        <div class="hidden-overlay">
            <div class="overlay-content position-relative">
                <button class="close-button" @onclick="CloseSpeakeasy" aria-label="Close">&times;</button>
                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="alert @(offerAvailable ? "alert-info" : "alert-warning")" role="alert">
                        @errorMessage
                    </div>
                }
                
                @if (offerAvailable)
                {
                    <h2>Welcome to the NE Underground</h2>
                    <p>Unlock this season's exclusive homeowner offer.</p>
                    <a href="@($"/messages?source=special-offer&ip={Uri.EscapeDataString(currentIpAddress)}")"
                        class="btn btn-light">Reveal the Offer</a>
                }
                else if (string.IsNullOrEmpty(errorMessage))
                {
                    <h2>Sorry, you missed it!</h2>
                    <p>Our exclusive offer has reached its limit.</p>
                    <p>Sign up for our newsletter to be notified of future offers.</p>
                }
            </div>
        </div>
    </div>
</div>

