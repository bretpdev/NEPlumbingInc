@inject ISpecialOfferSettingsService SpecialOfferSettingsService

@code {
    private SpecialOfferSettings? offerSettings;

    protected override async Task OnInitializedAsync()
    {
        offerSettings = await SpecialOfferSettingsService.GetSettingsAsync();
        pageContent = await HomePageContentService!.GetContentAsync();
    }

    private HomePageContent? pageContent;

    [Inject]
    private HomePageContentService? HomePageContentService { get; set; }
