@page "/"
@attribute [AllowAnonymous]
@using NEPlumbingInc.Services
@using NEPlumbingInc.Models

<PageTitle>NE Plumbing Inc - Luxury Plumbing Solutions</PageTitle>

<style>
    body {
        font-family: 'Segoe UI', sans-serif;
    }

    .hero-section {
        padding: 4rem 0;
    }

    .hero-badge {
        background-color: var(--hero-badge-color);
        color: #ffffff;
        padding: 0.5rem 1rem;
        border-radius: 2rem;
        font-size: 0.9rem;
    }

    .btn-primary {
        background-color: var(--button-color);
        border-color: var(--button-color);
    }

    .btn-primary:hover {
        background-color: var(--button-color);
        border-color: var(--button-color);
        opacity: 0.85;
    }

    .hero-title {
        font-size: 2.75rem;
        font-weight: bold;
    }

    .hero-image {
        display: block;
        margin: 0 auto;
        max-width: 100%;
        height: auto;
        max-height: 600px;
        width: auto;
        object-fit: contain;
        border-radius: 1rem;
        border: none;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2), 0 0 0 1px rgba(0, 0, 0, 0.05);
        transition: transform 0.5s ease, box-shadow 0.5s ease;
        cursor: pointer;
    }

    @@media (max-width: 992px) {
        .hero-image {
            max-height: 420px;
        }
    }

    @@media (max-width: 576px) {
        .hero-image {
            max-height: 320px;
        }
    }

    .hero-image:hover {
        transform: scale(1.05);
        /* Slight zoom for effect */
    }

    .hidden-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0, 0, 0, 0.7);
        display: flex;
        justify-content: center;
        align-items: center;
        opacity: 0;
        pointer-events: none;
        transition: opacity 0.3s ease, pointer-events 0s 0.3s;
    }

    .overlay-content {
        text-align: center;
        color: #fff;
        padding: 6rem;
        background-color: rgba(0, 0, 0, 0.8);
        border-radius: 1rem;
        box-shadow: 0 0 1rem rgba(0, 0, 0, 0.4);
    }

    .hidden-overlay.active {
        opacity: 1;
        pointer-events: all;
    }

    .hidden-overlay.active .overlay-content {
        transform: scale(1);
    }

    .close-button {
        position: absolute;
        top: 1rem;
        right: 1rem;
        background: transparent;
        border: none;
        color: white;
        font-size: 2rem;
        cursor: pointer;
        line-height: 1;
        padding: 0;
        z-index: 10;
    }

    .close-button:hover {
        color: #ccc;
    }

    /* Dark mode styling for featured services */
    [data-dark-mode="true"] .featured-services {
        background-color: #1e1e1e !important;
        color: #d4d4d4;
    }

    [data-dark-mode="true"] .featured-services h2 {
        color: #d4d4d4 !important;
    }

    [data-dark-mode="true"] .featured-services .card {
        background-color: #252526 !important;
        border: none !important;
        color: #d4d4d4;
    }

    [data-dark-mode="true"] .featured-services .card-body {
        background-color: #252526 !important;
        color: #d4d4d4;
    }

    [data-dark-mode="true"] .featured-services .card-body h3 {
        color: #d4d4d4 !important;
    }

    [data-dark-mode="true"] .featured-services .card-body p {
        color: #b8b8b8 !important;
    }

    [data-dark-mode="true"] .featured-services .text-primary {
        color: #569cd6 !important;
    }

    [data-dark-mode="true"] .featured-services .shadow-sm {
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.5) !important;
    }

    [data-dark-mode="true"] .featured-services .container {
        background-color: #1e1e1e !important;
    }

    .feature-badge {
        display: inline-flex;
        align-items: center;
        background-color: var(--surface-alt-color);
        border: 1px solid var(--bs-border-color);
        padding: 0.5rem 1rem;
        border-radius: 2rem;
        margin: 0.5rem;
        color: var(--text-color);
        font-weight: 500;
    }

    .feature-badge i {
        margin-right: 0.5rem;
        color: var(--primary-color);
    }

    .featured-services .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border: none;
        background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
        padding: 0;
        overflow: hidden;
    }

    .featured-services .card:hover {
        transform: translateY(-8px);
        box-shadow: 0 15px 40px rgba(0, 0, 0, 0.15);
    }

    .featured-services .card-body {
        padding: 2rem;
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        min-height: 250px;
        justify-content: center;
    }

    .featured-services .card-body i {
        color: #0056b3;
        margin-bottom: 1rem;
        transition: transform 0.3s ease;
    }

    .featured-services .card:hover .card-body i {
        transform: scale(1.15);
    }

    .featured-services .card-body h3 {
        color: #333;
        font-weight: 600;
        margin-bottom: 1rem;
    }

    .featured-services .card-body p {
        color: #666;
        font-size: 0.95rem;
        line-height: 1.6;
    }

    .featured-services {
        background-color: #f8f9fa;
        border-top: 3px solid #0056b3;
        border-bottom: 3px solid #0056b3;
    }

    .testimonials {
        background-color: #f8f9fa;
    }

    .col-lg-6.text-center {
        padding: 2rem;
    }

    /* Reorder columns on desktop so image is on the left */
    .hero-section .row {
        flex-direction: row-reverse;
    }
</style>

<div class="container hero-section">
    <div class="row align-items-center">
        <div class="col-lg-6 text-center">
            <img src="images/NEPlumbingInc7.PNG" alt="Luxury Plumbing Work" class="hero-image"
                onclick="window.NePlumbingOpenSpeakeasy && window.NePlumbingOpenSpeakeasy()" />
        </div>
        <div class="col-lg-6 mb-4 mb-lg-0">
            @if (pageContent != null)
            {
                <span class="hero-badge">@pageContent.HeroBadgeText</span>
                <h1 class="hero-title mt-3">@pageContent.HeroTitle</h1>
                <p class="lead text-muted mt-3">
                    @pageContent.HeroDescription
                </p>

                <div class="d-flex flex-wrap mt-3">
                    <span class="feature-badge">
                        <i class="bi bi-shield-check"></i> @pageContent.FeatureBadge1
                    </span>
                    <span class="feature-badge">
                        <i class="bi bi-trophy"></i> @pageContent.FeatureBadge2
                    </span>
                    <span class="feature-badge">
                        <i class="bi bi-clock"></i> @pageContent.FeatureBadge3
                    </span>
                </div>
            }
            else
            {
                <p>Loading content...</p>
            }

            <div class="d-flex gap-3 mt-4">
                <a href="/messages" class="btn btn-primary btn-lg">
                    <i class="bi bi-calendar-check me-2"></i>Schedule Consultation
                </a>
                <a href="/services" class="btn btn-outline-secondary btn-lg">
                    <i class="bi bi-grid me-2"></i>View Services
                </a>
            </div>
        </div>

        <!-- Hidden overlay that appears above everything -->
        <div class="hidden-overlay">
            <div class="overlay-content position-relative">
                <button class="close-button" type="button" onclick="window.NePlumbingCloseSpeakeasy && window.NePlumbingCloseSpeakeasy()" aria-label="Close">&times;</button>
                
                <div id="specialOfferMessage" class="alert d-none" role="alert"></div>

                <div id="specialOfferAvailable" class="d-none">
                    <h2>@offerSettings?.HeadingText</h2>
                    <p>@offerSettings?.DescriptionText</p>
                    <a id="specialOfferLink" href="/messages?source=special-offer" class="btn btn-light">@offerSettings?.ButtonText</a>
                </div>

                <div id="specialOfferUnavailable" class="d-none">
                    <h2>@offerSettings?.NoOfferHeading</h2>
                    <p>@offerSettings?.NoOfferDescription</p>
                    <p>@offerSettings?.NewsletterText</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- FEATURED SERVICES -->
<div class="featured-services py-5">
    <div class="container">
        <h2 class="text-center mb-5">@pageContent?.PremiumServicesTitle</h2>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body">
                        <i class="bi bi-droplet-fill display-4 text-primary mb-3"></i>
                        <h3 class="h4">@pageContent?.Service1Title</h3>
                        <p>@pageContent?.Service1Description</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body">
                        <i class="bi bi-snow display-4 text-primary mb-3"></i>
                        <h3 class="h4">@pageContent?.Service2Title</h3>
                        <p>@pageContent?.Service2Description</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body">
                        <i class="bi bi-water display-4 text-primary mb-3"></i>
                        <h3 class="h4">@pageContent?.Service3Title</h3>
                        <p>@pageContent?.Service3Description</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

