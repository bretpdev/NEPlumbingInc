@page "/messages"
@page "/message"
@inject NavigationManager NavigationManager

<PageTitle>Contact Us - NE Plumbing Inc.</PageTitle>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0">
                <div class="card-body p-5">
                    <h2 class="card-title text-center mb-4">Get In Touch</h2>
                    <p class="text-center text-muted mb-4">
                        We'd love to hear from you. Fill out the form below and we'll get back to you as soon as possible.
                    </p>

                    <form method="post" action="/messages/submit" class="needs-validation" novalidate data-nep-validate="true">
                        <input type="hidden" name="source" value="@source" />
                        <input type="hidden" name="ip" value="@ipAddress" />

                        <div class="mb-3">
                            <label class="form-label">Name</label>
                            <input class="form-control" name="Name" value="@form.Name" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <input class="form-control" name="Email" type="email" value="@form.Email" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Phone</label>
                            <input class="form-control" name="Phone" type="tel" autocomplete="tel" inputmode="tel" value="@form.Phone" data-nep-phone="true" />
                            <div class="invalid-feedback">Please enter a valid phone number (10-15 digits).</div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Message</label>
                            <textarea class="form-control" name="Message" rows="5" required>@form.Message</textarea>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-send me-2"></i>Send Message
                            </button>
                        </div>
                    </form>

                    @if (showSuccess)
                    {
                        <div class="alert alert-success mt-4 text-center">Thank you for your submission! We'll be in touch soon.</div>
                    }

                    @if (showError)
                    {
                        <div class="alert alert-danger mt-4 text-center">An error occurred while processing your submission.</div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private MessageFormModel form = new();
    private string? ipAddress;
    private string? source;
    private string? serviceName;
    private string? consultationType;
    private bool showSuccess;
    private bool showError;

    protected override void OnInitialized()
    {
        var uri = new Uri(NavigationManager.Uri);
        var query = System.Web.HttpUtility.ParseQueryString(uri.Query);
        
        ipAddress = query["ip"];
        source = query["source"];
        serviceName = query["service"];
        consultationType = query["type"];
        showSuccess = query["sent"] == "1";
        showError = query["error"] == "1";

        if (!showSuccess && !showError && string.Equals(source, "services", StringComparison.OrdinalIgnoreCase))
        {
            // Only prefill when coming from the Services CTA and the user hasn't typed anything yet.
            if (string.IsNullOrWhiteSpace(form.Message))
            {
                var typeLabel = string.Equals(consultationType, "inspection", StringComparison.OrdinalIgnoreCase)
                    ? "inspection"
                    : "consultation";

                if (!string.IsNullOrWhiteSpace(serviceName))
                {
                    form.Message = $"I'd like to schedule an {typeLabel} for: {serviceName}.";
                }
                else
                {
                    form.Message = $"I'd like to schedule an {typeLabel}.";
                }
            }
        }

        if (!showSuccess && !showError && string.Equals(source, "jobs", StringComparison.OrdinalIgnoreCase))
        {
            if (string.IsNullOrWhiteSpace(form.Message))
            {
                form.Message =
                    "Job Application\n" +
                    "\n" +
                    "Position interested in: \n" +
                    "Years of experience: \n" +
                    "Licensed/Certified (if applicable): \n" +
                    "Availability: \n" +
                    "Preferred contact method/time: \n" +
                    "\n" +
                    "Additional details: ";
            }
        }
    }
}